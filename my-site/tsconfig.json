{
  "compilerOptions": {
    "lib": ["es2020", "dom", "es2017"],
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": false
  },
  "include": ["src"]
}
